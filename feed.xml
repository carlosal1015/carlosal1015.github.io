      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\verb!$\diffp[m/2+n/2,m/2,n/2]F{x,y,z}$!&lt;/script&gt;&lt;/td&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\color{#0000FF}\frac{\partial^{2n/2+2m/2}F}{\partial x^{m/2+n/2}\partial y^{m/2}\partial z^{n/2}}&lt;/script&gt;&lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\verb!$\diffp[m/2+n/2,m/2,n/2][m+n]F{x,y,z}$!&lt;/script&gt;&lt;/td&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\color{#0000FF}\frac{\partial^{m+n}F}{\partial x^{m/2+n/2}\partial y^{m/2}\partial z^{n/2}}&lt;/script&gt;&lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\verb!$\diffp{A_i}{x^j,x^k}$!&lt;/script&gt;&lt;/td&gt;
