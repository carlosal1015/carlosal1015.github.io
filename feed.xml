      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\verb!$\diffp [2m-(k+1),2(k+1)-m]{F(x,y,z)}{x,y,z}$!&lt;/script&gt;&lt;/td&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\color{#0000FF}\frac{\partial^{k+m+2}F\left(x,y,z\right)}{\partial x^{2m-(k+1)}\partial y^{2(k+1)-m}\partial z}&lt;/script&gt;&lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\verb!$\diffp[f(k+1)+1,f(k-1)-1]{F(x,y)}{x,y}$!&lt;/script&gt;&lt;/td&gt;
      &lt;td style=&quot;text-align: center&quot;&gt;&lt;script type=&quot;math/tex&quot;&gt;\color{#0000FF}\frac{\partial^{f(k-1)+f(k+1)}F\left(x,y\right)}{\partial x^{f(k+1)+1}\partial y^{f(k-1)-1}}&lt;/script&gt;&lt;/td&gt;
    &lt;/tr&gt;
